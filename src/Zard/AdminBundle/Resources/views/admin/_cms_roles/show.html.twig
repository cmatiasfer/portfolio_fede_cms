{% extends '@admin_views/layout.html.twig' %}

{% block title %}{{ name_admin() }} | Admin Roles - {{ cms_role.name }}{% endblock %}

{% block body %}
   <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Admin
                <small>Role <b>{{ cms_role.name }}</b></small>
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-shield"></i> Admin</li>
                <li><a href="{{ path('admin_cms_roles_index') }}"><i class="fa fa-unlock-alt"></i> Roles</a></li>
                <li class="active">{{ cms_role.name }}</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ cms_role.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ cms_role.name }}</td>
                            </tr>
                            <tr>
                                <th>Role</th>
                                <td>{{ cms_role.role }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('admin_cms_roles_edit', {'id': cms_role.id}) }}" class="btn bg-orange pull-left"><i class="fa fa-edit"></i> <span class="hidden-xs">edit<span></a>
                    {{ include('@admin_views/admin/_cms_roles/_delete_form.html.twig') }}
                    <a href="{{ path('admin_cms_roles_index') }}" class="btn btn-default pull-right"><i class="fa fa-chevron-left"></i> back to list</a>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
