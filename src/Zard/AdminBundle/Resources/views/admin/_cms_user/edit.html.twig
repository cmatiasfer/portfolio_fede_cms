{% extends '@admin_views/layout.html.twig' %}

{% block title %}{{ name_admin() }} | Admin Users - Edit {{ cms_user.username }}{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Admin
                <small>Edit User <b>{{ cms_user.username }}</b></small>
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-shield"></i> Admin</li>
                <li><a href="{{ path('admin_cms_user_index') }}"><i class="fa fa-users"></i> Users</a></li>
                <li class="active">Edit {{ cms_user.username }}</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-warning">
                <div class="box-header with-border">
                    {{ include('@admin_views/admin/_cms_user/_form.html.twig', {'button_label': 'update', 'button_class': 'success bg-olive', 'i_class': 'fa fa-edit'}) }}
                    <a href="{{ path('admin_cms_user_index') }}" class="btn btn-default pull-right"><i class="fa fa-chevron-left"></i> back to list</a>
                    <a href="{{ path('admin_cms_user_edit_password', {'id' : cms_user.id}) }}" class="btn bg-orange pull-right" style="margin-right: 5px;"><i class="fa fa-key"></i> Edit password</a>
                    {% if 'ROLE_ADMIN' in cms_user.roles == false %}
                        {{ include('@admin_views/admin/_cms_user/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}