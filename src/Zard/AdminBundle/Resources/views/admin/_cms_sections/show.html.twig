{% extends '@admin_views/layout.html.twig' %}

{% block title %}{{ name_admin() }} | Admin Sections - {{ cms_section.name }}{% endblock %}

{% block body %}
   <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Admin
                <small>Section <b>{{ cms_section.name }}</b></small>
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-shield"></i> Admin</li>
                <li><a href="{{ path('admin_cms_roles_index') }}"><i class="fa fa-list"></i> Sections</a></li>
                <li class="active">{{ cms_section.name }}</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <table class="table table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ cms_section.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ cms_section.name }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ cms_section.description|raw }}</td>
                            </tr>
                            {# <tr>
                                <th>Primary Order</th>
                                <td>{{ cms_section.primaryOrder }}</td>
                            </tr> #}
                            <tr>
                                <th>Route</th>
                                <td>{{ cms_block.route }}</td>
                            </tr>
                            <tr>
                                <th>Listing Order</th>
                                <td>{{ cms_section.listingOrder }}</td>
                            </tr>
                            <tr>
                                <th>Visible</th>
                                <td>{{ cms_section.visible ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('admin_cms_sections_edit', {'id': cms_section.id}) }}" class="btn bg-orange pull-left"><i class="fa fa-edit"></i> <span class="hidden-xs">edit<span></a>
                    {{ include('@admin_views/admin/_cms_sections/_delete_form.html.twig') }}
                    <a href="{{ path('admin_cms_sections_index') }}" class="btn btn-default pull-right"><i class="fa fa-chevron-left"></i> back to list</a>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}