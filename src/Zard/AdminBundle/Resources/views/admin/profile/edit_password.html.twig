{% extends '@admin_views/layout.html.twig' %}

{% block title %}{{ name_admin() }} | Admin Users - Edit {{ cms_user.username }} password{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Admin
                <small>Edit <b>{{ cms_user.username }}</b> password</small>
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-shield"></i> Admin</li>
                <li><a href="{{ path('admin_cms_user_index') }}"><i class="fa fa-users"></i> Users</a></li>
                <li class="active">Edit {{ cms_user.username }} password</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="box box-warning">
                <div class="box-header with-border">
                    {{ include('@admin_views/admin/_cms_user/_form.html.twig', {'button_label': 'update', 'button_class': 'success bg-olive', 'i_class': 'fa fa-edit'}) }}
                    <a href="{{ path('admin_profile_show', {'id':cms_user.profile}) }}" class="btn btn-default pull-right"><i class="fa fa-chevron-left"></i> back to list</a>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
{% endblock %}