

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="keywords" content="{{ tt('PAGE_HOME','SEO_TITLE')}}">
    	<meta name="description" content="{{ tt('PAGE_HOME','SEO_DESC')}}">
		<title>{{ tt('PAGE_HOME','SEO_TITLE')}}</title>

		{% set bundleFront = 'bundles/zardfront' %}
		
		<link rel="apple-touch-icon" sizes="180x180" href="{{ asset(bundleFront ~ '/img/favicon/apple-touch-icon.png') }}">
		<link rel="icon" type="image/png" sizes="32x32" href="{{ asset(bundleFront ~ '/img/favicon/favicon-32x32.png') }}">
		<link rel="icon" type="image/png" sizes="16x16" href="{{ asset(bundleFront ~ '/img/favicon/favicon-16x16.png') }} ">
		<link rel="manifest" href="{{ asset(bundleFront ~ '/img/favicon/site.webmanifest') }} ">
		<link rel="mask-icon" href="{{ asset(bundleFront ~ '/img/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		
		<link rel="stylesheet" href="{{ asset(bundleFront ~ '/css/owl.theme.default.min.css') }}">
		<link rel="stylesheet" href="{{ asset(bundleFront ~ '/css/owl.carousel.min.css') }}">
		<link rel="stylesheet" href="{{ asset(bundleFront ~ '/css/styles.css') }}">
	</head>
	<body>

		<header>
			<h2 id="brand">Federico Bianchi</h2>
			<span id="btn-menu"></span>
		</header>
		
		<div id="about">
			<div class="row mt-120">
				<div class="col">
					<h3>{{ tt('ABOUT_STUDIO','TITLE')}}</h3>
					<div class="content">
						{{ tt('ABOUT_STUDIO','TEXT')|raw }}
					</div>
				</div>
				<div class="col">
					<h3> Federico Bianchi</h3>
					<div class="content">
						{{ tt('ABOUT_FEDERICO_BIANCHI','TEXT')|raw }}				
					</div>
				</div>
			</div>
			<div class="row container-data">
				<div class="col-md-80">
					<h3 class="desk-show">{{ tt('ABOUT_PORTFOLIO','TITLE') }}</h3>
					<div class="row content contact">
						<div class="col request-pdf desk-show">
							<p>
								{{ tt('ABOUT_PORTFOLIO','TEXT')|striptags('<a><br><strong><i>')|raw }}
							</p>
						</div>
						<div class="col data">
							{{ tt('CONTACT_DATA','TEXT')|striptags('<a><br><strong><i>')|raw }}
						</div>
						<div class="col">
							{{ tt('LINK_REDES','TEXT')|striptags('<a><br><strong><i>')|raw }}
						</div>
						<div class="col request-pdf mb-show">
							<h3>{{ tt('ABOUT_PORTFOLIO','TITLE') }}</h3>
							<p class="request-pdf">
								{{ tt('ABOUT_PORTFOLIO','TEXT')|striptags('<a><br><strong><i>')|raw }}
							</p>
						</div>
					</div>
					
				</div>
			</div>                    
		</div> 

		<div class="owl-carousel">
			{% for image in projectsGallery %}
				<div class="item" data-project="{{image.projects.id}}">
					{% set hiddenImageDesktop = false %}
					{% if image.imageMobile != "" %}
						{% set hiddenImageDesktop = true %}
						<img class="owl-lazy img-mb" data-src="{{ asset('images/projects_gallery/' ~ image.imageMobile) }}" alt="" srcset=""> 
					{% endif %}
					<img class="owl-lazy {{ hiddenImageDesktop ? 'img-desk' : '' }}" data-src="{{ asset('images/projects_gallery/' ~ image.mainImage) }}" alt="" srcset="">
					{#  #}
				</div>
			{% endfor %}
		</div>
		<div class="projects">
			{% for project in projects %}
				{% if project.text != "" %}
					<span class="project-desc" style="color:{{ project.color }}" data-project="{{ project.id }}">{{ project.text|raw }}</span>
				{% endif %}
			{% endfor %}
		</div>
	

		<script src="{{ asset(bundleFront ~ '/js/jquery.slim.min.js') }}"></script>
		<script src="{{ asset(bundleFront ~ '/js/owl.carousel.min.js') }}"></script>
		<script src="{{ asset(bundleFront ~ '/js/jquery.start.js') }}"></script>
	</body>
</html>